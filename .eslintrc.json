{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2, {
      "FunctionDeclaration": {
        "parameters": "first"
      },
      "CallExpression": {
        "arguments": "first"
      },
      "VariableDeclarator": "first"
    }],
    "max-len": ["error", 80],
    "no-var": "error",
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-infix-ops": ["error"]
  }
}